! General
! =======
Xft.dpi       : 120
Xft.autohint  : true
Xft.lcdfilter : lcddefault
Xft.hintstyle : hintfull
Xft.hinting   : true
Xft.antialias : true
Xft.rgba      : rgb

! Cursor
!Xcursor.theme : Bibata-Modern-Classic

! XTerm
! =====

! Basic settings
XTerm*termName           : xterm-256color
XTerm*locale             : true
XTerm*utf8               : true
XTerm*utf8Fonts          : always
XTerm*dynamicColors      : true

! UI components
XTerm*scrollBar          : false
XTerm*toolBar            : false
XTerm*geometry           : 80x24
XTerm*internalBorder     : 0

! Cursor
XTerm*cursorColor        : reverse
XTerm*cursorBlink        : true
XTerm*cursorOffTime      : 300
XTerm*cursorOnTime       : 800
XTerm*cursorUnderLine    : false
XTerm*pointerShape       : XTerm

! Bell
XTerm*bellIsUrgent       : false
XTerm*bellSupressTime    : 100
XTerm*marginBell         : false
XTerm*visualBell         : true

! Text highlighting
XTerm*highlightColor     : XtDefaultForeground
XTerm*highlightReverse   : true
XTerm*highlightSelection : true
XTerm*highlightTextColor : XtDefaultBackground

! Font settings
XTerm*faceName           : Victor Mono:Medium
XTerm*faceSize           : 13
XTerm*renderFont         : true
XTerm*boldColors         : false
XTerm*faceSize1          : 6
XTerm*faceSize2          : 8
XTerm*faceSize3          : 10
XTerm*faceSize4          : 14
XTerm*faceSize5          : 20
XTerm*faceSize6          : 24
XTerm*forceBoxChars      : false
XTerm*limitFontsets      : 5
XTerm*scaleHeight        : 1.0

! Scroll and output
XTerm*jumpScroll         : true
XTerm*multiScroll        : true
XTerm*saveLines          : 9999
XTerm*scrollKey          : true
XTerm*scrollTtyKeypress  : true
XTerm*scrollTtyOutput    : false

! Backspace behaviour
XTerm*backarrowKey       : false
XTerm*metaSendsEscape    : true
XTerm*ttyModes           : erase ^?

! Key bindings
XTerm*selectToClipboard  : true
XTerm*omitTranslation    : popup-menu
XTerm*translations       : #override \n\
    Ctrl Shift <Key>C    : copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V    : insert-selection(CLIPBOARD) \n\
    Ctrl <Key> minus     : smaller-vt-font() \n\
    Ctrl <Key> plus      : larger-vt-font() \n\
    Ctrl <Key> 0         : set-vt-font(d)

#include ".config/xterm/modus_operandi.Xcolors"
