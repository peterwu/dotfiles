[user]
  name  = Peter Wu
  email = peterwu@hotmail.com
[credential]
  helper = store
[core]
  editor = vim
[pull]
  rebase = true
[gui]
  fontui   = -family \"Liberation Sans\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"Liberation Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[diff]
	tool = vimdiff
[difftool]
	prompt = false
	trustExitCode = true
	keepBackup = false
[difftool "nvimdiff"]
  cmd = vimdiff $LOCAL $REMOTE
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
	keepBackup = false
	trustExitCode = true
[mergetool "nvimdiff"]
  cmd = vimdiff $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J'
