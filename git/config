[user]
    name  = Peter Wu
    email = peterwu@hotmail.com
[credential]
    helper = store
[core]
    editor = emacsclient -nw
[init]
    defaultBranch = main
[pull]
    rebase = true
[gui]
    fontui   = -family \"Liberation Sans\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Liberation Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[diff]
    tool = ediff
[difftool]
    keepBackup = false
    prompt = false
    trustExitCode = true
[difftool "ediff"]
    cmd = ediff $LOCAL $REMOTE
[merge]
    conflictStyle = diff3
    tool = ediff
[mergetool]
    prompt = false
    keepBackup = false
    trustExitCode = true
[mergetool "ediff"]
    cmd = emerge $LOCAL $REMOTE $MERGED $BASE
