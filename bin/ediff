#!/usr/bin/env bash

files=$(printf '"%s" ' "$@")

if [[ $# -eq 2 ]]; then
    fn="ediff-files"
elif [[ $# -eq 3 ]]; then
    fn="ediff-files3"
else
    exit 1
fi

# test if emacsclient can connect to server
emacsclient -nw --no-wait 2> /dev/null

if [[ $? -eq 0 ]]; then
    emacsclient -nw --eval "(${fn} ${files})" 2> /dev/null
else
    emacs -nw --eval "(${fn} ${files})" 2> /dev/null
fi

