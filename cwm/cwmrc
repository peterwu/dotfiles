# KEYBINDINGS:
# 4 = mod (windows key)
# S = shift
# C = control
# M = meta (alt)

unbind-key   all
unbind-mouse all

fontname "Liberation Mono:pixelsize=18"
gap    35 5 5 5
sticky yes

autogroup 0 termbar
ignore    termbar

bind-key   S4-r     reload
bind-key   S4-q     quit
bind-key   S4-l     lock
bind-key   4-d      "rofi -show"
bind-key   4-Return terminal

#bind-key   M-question menu-exec
#bind-key   M-period   menu-cmd

bind-key   S4-1     window-movetogroup-1
bind-key   S4-2     window-movetogroup-2
bind-key   S4-3     window-movetogroup-3
bind-key   S4-4     window-movetogroup-4
bind-key   S4-5     window-movetogroup-5
bind-key   S4-6     window-movetogroup-6
bind-key   S4-7     window-movetogroup-7
bind-key   S4-8     window-movetogroup-8
bind-key   S4-9     window-movetogroup-9

bind-key   4-1      group-only-1
bind-key   4-2      group-only-2
bind-key   4-3      group-only-3
bind-key   4-4      group-only-4
bind-key   4-5      group-only-5
bind-key   4-6      group-only-6
bind-key   4-7      group-only-7
bind-key   4-8      group-only-8
bind-key   4-9      group-only-9

bind-key   4-Tab    group-cycle
bind-key   M-Tab    window-cycle-ingroup

bind-key   4-q      window-close

bind-key   4-Up     window-maximize
bind-key   4-Down   window-minimize

bind-mouse C-1      window-move
bind-mouse M4-1     window-resize
bind-mouse 4-1      window-raise
bind-mouse 4-3      window-lower
bind-mouse 4-4      group-cycle
bind-mouse 4-5      group-rcycle
