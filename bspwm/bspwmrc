#! /bin/sh

sxhkd &

bspc monitor eDP-1 -d 1 2 3 4 5 6 7 8 9
bspc monitor HDMI-1 -d 0

bspc config border_width         0
bspc config window_gap           1

bspc config split_ratio          0.52
bspc config single_monocle       true
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true

bspc rule -a URxvt desktop='^1'
bspc rule -a Firefox desktop='^2'
bspc rule -a Emacs desktop='^3' state=tiled
bspc rule -a Thunderbird desktop='^4' 
bspc rule -a Soffice desktop='^5' state=tiled
bspc rule -a vlc desktop='^6' 


~/.config/scripts/bspwm_init_session.sh &
